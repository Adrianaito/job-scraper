<% jobs = [] %>
<% @jobs.each do |job| %>
  <% unless job[:warning].downcase == "japanese required" %>
    <% jobs << job %>
  <% end %>
<% end %>
<% jobs_residents = [] %>
<% @jobs.each do |job| %>
  <% if job[:warning].downcase == "japan residents only" %>
    <% jobs_residents << job %>
  <% end %>
<% end %>
<h1><%= @jobs.count %> jobs found!</h1>
<a class="btn btn-primary" href="/no_japanese">Japanese not Required (<%= jobs.count %>)</a>
<a class="btn btn-primary" href="/resident">Japan Residents Only (<%= jobs_residents.count %>)</a>
<% @jobs.each do |job| %>
  <h1><%= job[:title] %></h1>
  <p><%= job[:company] %></p>
  <p><%= job[:location] %></p>
  <h5><%= job[:warning] %></h5>
  <a class="btn btn-primary" href=<%= job[:url] %>>
    Read more </a>
<% end %>
